{
    "name": "amphp/socket",
    "homepage":  "https://github.com/amphp/socket",
    "description": "Async socket connection / server tools for Amp.",
    "support": {
        "issues": "https://github.com/amphp/socket/issues"
    },
    "keywords": [
        "tcp",
        "sockets",
        "tls",
        "encryption",
        "async",
        "non-blocking",
        "amp"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Daniel Lowrey",
            "email": "rdlowrey@gmail.com"
        },
        {
            "name": "Aaron Piotrowski",
            "email": "aaron@trowski.com"
        },
        {
            "name": "Niklas Keller",
            "email": "me@kelunik.com"
        }
    ],
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/mihai-ionescu/uri"
        },
        {
            "type": "vcs",
            "url": "https://github.com/mihai-ionescu/parallel"
        },
        {
            "type": "vcs",
            "url": "https://github.com/mihai-ionescu/dns"
        },
        {
            "type": "vcs",
            "url": "https://github.com/mihai-ionescu/artax"
        },
        {
            "type": "vcs",
            "url": "https://github.com/mihai-ionescu/socket"
        },
        {
            "type": "vcs",
            "url": "https://github.com/mihai-ionescu/file"
        }
    ],
    "minimum-stability": "dev",
    "require": {
        "php": ">=7.0",
        "amphp/amp": "^2",
        "amphp/dns": "dev-master",
        "amphp/byte-stream": "1.1.6",
        "amphp/uri": "dev-master"
    },
    "require-dev": {
        "amphp/phpunit-util": "^1",
        "phpunit/phpunit": "^6",
        "friendsofphp/php-cs-fixer": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "Amp\\Socket\\": "lib"
        },
        "files": [
            "lib/functions.php",
            "lib/Internal/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Amp\\Socket\\Test\\": "test"
        }
    },
    "config": {
        "platform": {
            "php": "7.0.0"
        }
    }
}
